    {{#unless isVehicle}}
    <div class="form-group ">
        <label>{{localize "DND5E.SpecialTraits"}}</label>
        <a class="config-button" data-action="flags"
           title="{{localize 'DND5E.TraitConfig' trait=(localize 'DND5E.SpecialTraits')}}">
            <i class="fas fa-cog"></i>
        </a>
    </div>
    {{/unless}}
</div>
